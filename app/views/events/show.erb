<form action="/events/show" method="POST">
  <input type="hidden" name="event[id]" value="<%= @event.id %>">
  <br>
  <input type="submit" value="Add to My Events">
</form> 

<h2> <%= @event.name %> </h2>
<h3>Date: <%= @event.date %> </h3>
<h3>Venue: <a href="/venues/<%= @event.venue.id %>"> <%= @event.venue.name %>, <%= @event.venue.location %> </a> </h3>
<h3>Performers:</h3>
<% @event.performers.each do |performer| %>
  <li> <a href="/performers/<%= performer.id %>"> <%= performer.name %> </a></li>
<% end %>
<br>

<a href="/events/<%= @event.id %>/edit"> <input type="submit" value="Edit Event Performers"> </a>

<form action="/events/<%= @event.id %>/delete" method="POST">
  <input type="submit" value="Delete Event">
</form>